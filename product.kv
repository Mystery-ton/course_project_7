#:import Factory kivy.factory.Factory

ScreenManager:
    id: screen_manager
    MenuScreen:
        id: menu_screen
        name: 'Меню'
        manager: screen_manager
    Sotrudnik:
        id: sotrudnik_screen
        name: 'Сотрудники'
        manager: screen_manager
    Recipe:
        id: recipe_screen
        name: 'Рецепты'
        manager: screen_manager
    Provider:
        id: provider_screen
        name: 'Поставщики'
        manager: screen_manager
    Price:
        id: price_screen
        name: 'Прайслист'
        manager: screen_manager
    Calories:
        id: calories_screen
        name: 'Компьютер сотрудника'
        manager: screen_manager
    Prod_Rec:
        id: prod_rec_screen
        name: 'Программы на компьютере сотрудника'
        manager: screen_manager

<MenuScreen>

    BoxLayout:
        padding: 25, 0, 0, 0

        BoxLayout:
            orientation: "vertical"
            padding: 25, 25, 25, 40
            spacing: 10

            Button:
                color: 0.34, 0.14, 0.43
                on_press: app.connect_table_sotrudnik()
                on_release: root.manager.current = 'Сотрудники'
                text: "Сотрудники"
                background_color: 0.67, 0.97, 0.7, 1
                background_normal: ''
                font_size: 24

            Button:
                color: 0.34, 0.14, 0.43
                text: "Компьютер"
                font_size: 24
                disabled: False
                background_color: 0.67, 0.97, 0.7, 1
                background_normal: ''
                on_press: app.connect_table_recipe()
                on_release: root.manager.current = 'Рецепты'

            Button:
                color:0.34, 0.14, 0.43
                text: "Программы"
                font_size: 24
                disabled: False
                background_color: 0.67, 0.97, 0.7, 1
                background_normal: ''
                on_release: root.manager.current = 'Поставщики'
                on_press: app.connect_table_provider()


            Button:
                color: 0.34, 0.14, 0.43
                text: "Таможня"
                font_size: 24
                disabled: False
                background_color: 0.67, 0.97, 0.7, 1
                background_normal: ''
                on_press: app.input_data_price()
                on_release: root.manager.current = 'Прайслист'

            Button:
                color: 0.34, 0.14, 0.43
                text: "Компьютер сотрудника"
                font_size: 24
                disabled: False
                background_color: 0.67, 0.97, 0.7, 1
                background_normal: ''
                on_press: app.connect_table_calories()
                on_release: root.manager.current = 'Калории'

            Button:
                color: 0.34, 0.14, 0.43
                text: "Программы на компьютере сотрудника"
                font_size: 24
                disabled: False
                background_color: 0.67, 0.97, 0.7, 1
                background_normal: ''
                on_press: app.connect_table_prodrec()
                on_release: root.manager.current = 'Рецепты продуктов'
